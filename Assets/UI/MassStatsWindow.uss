.root {
    max-width: 700px;
    max-height: 400px;
    min-height: 100px;
    background-color: rgba(34, 38, 46, 0.95);
}

#title-bar {
    justify-content: space-between;
    margin-bottom: 8px;
    margin-top: 0;
    min-height: 30px;
}

#close-button {
    margin-left: 0;
    margin-right: 4px;
    margin-top: 0;
    margin-bottom: 0;
    padding-left: 10px;
    padding-right: 10px;
    padding-top: 9px;
    padding-bottom: 10px;
    font-size: 25px;
    max-width: 20px;
    max-height: 20px;
}

#close-button:hover {
    color: rgb(194, 41, 25);
    border-left-color: rgb(194, 41, 25);
    border-right-color: rgb(194, 41, 25);
    border-top-color: rgb(194, 41, 25);
    border-bottom-color: rgb(194, 41, 25);
}

.part-details {
    flex-direction: row;
    justify-content: space-between;
}

.part-details__name {
    overflow: hidden;
    text-overflow: ellipsis;
    width: 20%;
}

.part-details__item {
    width: 11%;
}
